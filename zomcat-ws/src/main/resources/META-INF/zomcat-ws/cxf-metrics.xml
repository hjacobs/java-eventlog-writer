<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://cxf.apache.org/core
           http://cxf.apache.org/schemas/core.xsd">

    <import resource="classpath:META-INF/zomcat-ws/cxf-nobus.xml"/>

    <!-- Interceptors -->
    <bean id="metricsCollectorInbound" class="de.zalando.zomcat.cxf.MetricsCollectorInInterceptor">
        <constructor-arg ref="cxfMetricsListener"/>
    </bean>
    <bean id="metricsCollectorOutbound" class="de.zalando.zomcat.cxf.MetricsCollectorOutInterceptor">
        <constructor-arg ref="cxfMetricsListener"/>
    </bean>

    <!-- Metrics collector -->
    <bean id="cxfMetricsListener" class="de.zalando.zomcat.cxf.metrics.MetricsCollector">
        <constructor-arg ref="cxfMetricRegistry"/>
    </bean>
    <bean id="cxfMetricRegistry" class="com.codahale.metrics.MetricRegistry"/>

    <!-- JMX publisher -->
    <bean id="jmxMetricPublisher" class="de.zalando.zomcat.cxf.metrics.JMXMetricsPublisher"
        factory-method="createInstance"
        init-method="start"
        destroy-method="stop">
        <constructor-arg value="Zalando"/>
        <constructor-arg ref="cxfMetricRegistry"/>
    </bean>

    <cxf:bus>
        <cxf:properties>
            <entry key="org.apache.cxf.logging.FaultListener">
                <bean class="de.zalando.zomcat.cxf.ExceptionLogger"/>
            </entry>
        </cxf:properties>
        <cxf:inInterceptors>
            <ref bean="flowIdInbound" />
            <ref bean="executionContextInbound" />
            <ref bean="logInbound"/>
            <ref bean="metricsCollectorInbound" />
        </cxf:inInterceptors>
        <cxf:outInterceptors>
            <ref bean="logOutbound"/>
            <ref bean="executionContextOutbound" />
            <ref bean="flowIdOutbound"/>
            <ref bean="hostInstanceOutbound"/>
            <ref bean="metricsCollectorOutbound"/>
        </cxf:outInterceptors>
        <cxf:inFaultInterceptors>
            <ref bean="flowIdInbound" />
            <ref bean="executionContextInbound" />
            <ref bean="logInbound"/>
        </cxf:inFaultInterceptors>
        <cxf:outFaultInterceptors>
            <ref bean="logOutbound"/>
            <ref bean="executionContextOutbound" />
            <ref bean="flowIdOutbound"/>
            <ref bean="hostInstanceOutbound"/>
        </cxf:outFaultInterceptors>
    </cxf:bus>
</beans>
