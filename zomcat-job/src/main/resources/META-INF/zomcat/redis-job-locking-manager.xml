<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="redis-job-locking-config.xml" />

    <bean id="redisLockResourceManager" class="de.zalando.zomcat.jobs.lock.RedisLockResourceManagerImpl">
        <constructor-arg index="0" ref="redisConnectionPool" />
        <constructor-arg index="1">
            <bean class="org.codehaus.jackson.map.ObjectMapper">
                <property name="dateFormat">
                    <bean class="java.text.SimpleDateFormat">
                        <constructor-arg type="java.lang.String" value="yyyy-MM-dd'T'HH:mm:ss"></constructor-arg>
                    </bean>
                </property>
            </bean>
        </constructor-arg>
    </bean>
</beans>
