<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="redisConfig" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxIdle" value="${job.lock.redis.maxIdle:8}"/>
        <property name="minIdle" value="${job.lock.redis.minIdle:0}"/>
        <property name="maxActive" value="${job.lock.redis.maxActive:8}"/>
        <property name="maxWait" value="${job.lock.redis.maxWait:-1}"/>
        <property name="whenExhaustedAction" value="${job.lock.redis.whenExhaustedAction:1}"/>
        <property name="testOnBorrow" value="${job.lock.redis.testOnBorrow:true}"/>
        <property name="testOnReturn" value="${job.lock.redis.testOnReturn:false}"/>
        <property name="testWhileIdle" value="${job.lock.redis.testWhileIdle:true}"/>
        <property name="timeBetweenEvictionRunsMillis" value="${job.lock.redis.timeBetweenEvictionRunsMillis:30000}"/>
        <property name="numTestsPerEvictionRun" value="${job.lock.redis.numTestsPerEvictionRun:-1}"/>
        <property name="minEvictableIdleTimeMillis" value="${job.lock.redis.minEvictableIdleTimeMillis:60000}"/>
        <property name="softMinEvictableIdleTimeMillis" value="${job.lock.redis.softMinEvictableIdleTimeMillis:-1}"/>
    </bean>

    <bean id="redisConnectionPool" class="redis.clients.jedis.JedisPool" destroy-method="destroy">
        <constructor-arg index="0" ref="redisConfig" />
        <constructor-arg index="1" value="${job.lock.redis.host}" />
        <constructor-arg index="2" value="${job.lock.redis.port:6379}" />
    </bean>
</beans>