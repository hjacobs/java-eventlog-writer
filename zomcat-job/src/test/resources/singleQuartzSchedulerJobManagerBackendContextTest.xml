<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <!-- Job Manager -->
    <bean id="zalandoJobManager" class="de.zalando.zomcat.jobs.management.impl.SingleQuartzSchedulerJobManager">
        <property name="delegatingJobSchedulingConfigProvider" ref="testJobSchedulerConfigProvider"/>
    </bean>

    <!-- Database Job Scheduler Config -->
    <bean id="testJobSchedulerConfigProvider" class="de.zalando.zomcat.jobs.management.TestJobSchedulingConfigProvider"/>

    <!-- JobConfigSource Interface Implementation used for Tests-->
    <bean id="testJobConfigSource" class="de.zalando.zomcat.jobs.management.TestJobConfigSource"/>

    <!-- Make Job Status Bean aware of JobManager in order to have it behave differently -->
    <bean id="jobsStatusBean" class="de.zalando.zomcat.jobs.JobsStatusBean">
        <property name="jobManager" ref="zalandoJobManager"/>
    </bean>
</beans>
