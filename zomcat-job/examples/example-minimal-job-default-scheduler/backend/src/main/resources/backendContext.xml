<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
       ">

    <!-- we need an appconfig Configuration instance for WS authorization -->
    <import resource="classpath:META-INF/appconfig/no-db.xml"/>

    <!-- This is the JobManager based Jobs Framework inclusion-->
    <import resource="classpath:META-INF/zomcat/scheduler.xml" />

    <context:component-scan base-package="de.zalando.mentoring, de.zalando.zomcat"  />
    <context:annotation-config />

    <bean id="applicationConfig" class="de.zalando.mentoring.example.configuration.impl.ApplicationConfigImpl">
        <property name="config" ref="compositeConfiguration"/>
    </bean>

</beans>
