<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Example</description>
    <display-name>Example</display-name>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/spring-context.xml</param-value>
    </context-param>



    <!-- ToggleHeartbeatMode - servlet for toggling heartbeat mode between ok/deploy -->
    <servlet>
        <servlet-name>ToggleHeartbeatMode</servlet-name>
        <servlet-class>de.zalando.zomcat.servlet.ToggleHeartbeatModeServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>


    <!-- JobsMonitor - servlet for monitoring the jobs -->
    <servlet>
        <servlet-name>JobsMonitor</servlet-name>
        <servlet-class>de.zalando.zomcat.servlet.JobsMonitorServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <!-- ToggleHeartbeatMode - servlet for toggling heartbeat mode between ok/deploy -->
    <servlet>
        <servlet-name>ToggleJobModeServlet</servlet-name>
        <servlet-class>de.zalando.zomcat.servlet.ToggleJobModeServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>

    <!-- ToggleOperationMode - servlet for toggling operation mode between normal/maintenance -->
    <servlet>
        <servlet-name>ToggleOperationMode</servlet-name>
        <servlet-class>de.zalando.zomcat.servlet.ToggleOperationModeServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Status</servlet-name>
        <servlet-class>de.zalando.zomcat.servlet.StatusServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <!-- TriggerJobServlet - servlet for triggering jobs instantly -->
    <servlet>
        <servlet-name>TriggerJobServlet</servlet-name>
        <servlet-class>de.zalando.zomcat.servlet.TriggerJobServlet</servlet-class>
        <load-on-startup>7</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Manifest</servlet-name>
        <servlet-class>de.zalando.zomcat.servlet.ManifestServlet</servlet-class>
    </servlet>


    <!-- ToggleOperationMode - servlet for toggling operation mode between normal/maintenance -->
    <servlet-mapping>
        <servlet-name>ToggleOperationMode</servlet-name>
        <url-pattern>/toggleOperationMode</url-pattern>
    </servlet-mapping>

    <!-- ToggleHeartbeatMode - servlet for toggling heartbeat mode between ok/deploy -->
    <servlet-mapping>
        <servlet-name>ToggleHeartbeatMode</servlet-name>
        <url-pattern>/toggleHeartbeatMode</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ToggleJobModeServlet</servlet-name>
        <url-pattern>/toggleJobMode</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TriggerJobServlet</servlet-name>
        <url-pattern>/triggerJob</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TriggerJobServlet</servlet-name>
        <url-pattern>/triggerJob</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ToggleHeartbeatMode</servlet-name>
        <url-pattern>/toggleHeartbeatMode</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>JobsMonitorFilter</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationFactoryClassName</param-name>
            <param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
        </init-param>
        <init-param>
            <param-name>configuration</param-name>
            <param-value>deployment</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>JobsMonitorFilter</filter-name>
        <url-pattern>/jobs.monitor/*</url-pattern>
    </filter-mapping>

</web-app>
