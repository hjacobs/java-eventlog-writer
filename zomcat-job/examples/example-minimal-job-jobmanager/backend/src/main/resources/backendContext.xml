<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
       ">

    <context:component-scan base-package="de.zalando, de.zalando.mentoring, de.zalando.zomcat"/>
    <context:annotation-config />

    <!-- This is the JobManager based Jobs Framework inclusion-->
    <import resource="classpath:META-INF/zomcat/jobs-single-quartz-scheduler-manager.xml"/>
    <!-- scheduler.conf If used, remove db configuration provider
    <import resource="classpath:META-INF/zomcat/jobs-classpath-configuration-provider.xml"/> -->
    <!-- Job Scheduling Configuration Provider for Job Manager - using Job Scheduling Database Resources located in zz_commons-->
    <import resource="classpath:META-INF/zomcat/jobs-database-configuration-provider.xml"/>

    <bean id="dataSourceExampleSProcProvider" class="de.zalando.sprocwrapper.dsprovider.SingleDataSourceProvider">
        <property name="dataSource">
            <ref local="dataSourceExampleSProc"/>
        </property>
    </bean>
    <bean id="dataSourceExampleSProc" class="com.jolbox.bonecp.spring.DynamicDataSourceProxy">
        <property name="targetDataSource">
            <ref local="dataSourceExampleSProc_first"/>
        </property>
    </bean>
    <bean id="dataSourceExampleSProc_configBean" class="de.zalando.dbutils.pool.ConnectionPoolMBean">
        <property name="proxy">
            <ref local="dataSourceExampleSProc"/>
        </property>
    </bean>
    <bean id="dataSourceExampleSProc_first" destroy-method="close" class="com.jolbox.bonecp.BoneCPDataSource" lazy-init="true">
        <property name="driverClass" value="${example.sproc.datasource.driverClassName}"/>
        <property name="jdbcUrl" value="${example.sproc.datasource.url}"/>
        <property name="username" value="${example.sproc.datasource.username}"/>
        <property name="password" value="${example.sproc.datasource.password}"/>
        <property name="idleConnectionTestPeriodInMinutes" value="${example.sproc.datasource.idleConnectionTestPeriodInMinutes}"/>
        <property name="idleMaxAgeInMinutes" value="${example.sproc.datasource.idleMaxAgeInMinutes}"/>
        <property name="maxConnectionsPerPartition" value="${example.sproc.datasource.maxConnectionsPerPartition}"/>
        <property name="minConnectionsPerPartition" value="${example.sproc.datasource.minConnectionsPerPartition}"/>
        <property name="poolAvailabilityThreshold" value="${example.sproc.datasource.poolAvailabilityThreshold}"/>
        <property name="partitionCount" value="${example.sproc.datasource.partitionCount}"/>
        <property name="acquireIncrement" value="${example.sproc.datasource.acquireIncrement}"/>
        <property name="releaseHelperThreads" value="${example.sproc.datasource.releaseHelperThreads}"/>
        <property name="statisticsEnabled" value="${example.sproc.datasource.statisticsEnabled}"/>
        <property name="acquireRetryAttempts" value="${example.sproc.datasource.acquireRetryAttempts}"/>
        <property name="acquireRetryDelayInMs" value="${example.sproc.datasource.acquireRetryDelayInMs}"/>
        <property name="disableJMX" value="${example.sproc.datasource.disableJMX}"/>
        <property name="connectionTimeoutInMs" value="${example.sproc.datasource.connectionTimeoutInMs}"/>
        <property name="disableConnectionTracking" value="${example.sproc.datasource.disableConnectionTracking}"/>
    </bean>

    <bean id="placeholderConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="systemPropertiesMode" value="2"/>
        <property name="locations">
            <list>
                <value>classpath:db_api_version.properties</value>
                <value>classpath:application.properties</value>
                <value>classpath:scheduler.properties</value>
            </list>
        </property>
    </bean>

    <!-- JobManager requires this qualifier for the datasourceprovider -->
    <alias name="dataSourceExampleSProcProvider" alias="resourceLockDataSourceProvider"/>
    <alias name="dataSourceExampleSProcProvider" alias="jobManagerDatasourceProvider"/>

</beans>