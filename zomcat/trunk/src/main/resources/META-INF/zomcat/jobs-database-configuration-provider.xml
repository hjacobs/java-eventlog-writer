<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- Database Job Scheduler Config -->
    <bean id="jobSchedulerConfigProvider" class="de.zalando.zomcat.jobs.management.impl.DatabaseJobSchedulerConfigProvider"/>

    <!-- SProc Service -->
    <bean id="jobManagerSProcService" class="de.zalando.zomcat.jobs.management.persistence.impl.JobManagerSProcServiceImpl"/>

    <!-- A DataSourceProvider named 'jobManagerDatasourceProvider' must be present in Applications Spring Context -->
    <!-- This is most easily achieved by aliasing the Applications main DatasourceProvider to specified bean name -->
</beans>
