<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- Only for local testing. This file will not make it into any distribution -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="default" class="org.apache.log4j.ConsoleAppender">
        <param name="encoding" value="UTF-8" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %x %p %t %l: %m%n" />
        </layout>
    </appender>

    <logger name="org.apache">
        <level value="warn" />
        <appender-ref ref="default" />
    </logger>

    <logger name="org.quartz">
        <level value="debug" />
        <appender-ref ref="default" />
    </logger>

    <logger name="org.springframework" additivity="false">
        <level value="info" />
        <appender-ref ref="default" />
    </logger>

    <logger name="de.zalando" additivity="false">
        <level value="debug" />
        <appender-ref ref="default" />
    </logger>

    <logger name="net.sourceforge" additivity="false">
        <level value="error" />
        <appender-ref ref="default" />
    </logger>

    <root>
        <priority value="error" />
        <appender-ref ref="default" />
    </root>

</log4j:configuration>
