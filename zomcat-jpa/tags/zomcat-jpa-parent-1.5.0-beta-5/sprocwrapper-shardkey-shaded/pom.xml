<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>de.zalando</groupId>
        <artifactId>zomcat-jpa-parent</artifactId>
        <version>1.5.0-beta-5</version>
    </parent>
    <artifactId>sprocwrapper-shardkey-shaded</artifactId>
    <name>Zomcat JPA Sharding extraction</name>
    <description>Extracts some classes from zalando-sprocwrapper that are used for handling shards with JPA.
    </description>
    <organization>
        <name>Zalando/Technology/Platform</name>
    </organization>
    <properties>
        <project.build_env.maven>maven3</project.build_env.maven>
    </properties>
    <dependencies>
        <dependency>
            <groupId>de.zalando</groupId>
            <artifactId>zalando-sprocwrapper</artifactId>
            <version>1.0.0-RC2</version>
            <exclusions>
                <exclusion>
                    <artifactId>org.eclipse.persistence.jpa</artifactId>
                    <groupId>org.eclipse.persistence</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>hibernate-validator</artifactId>
                    <groupId>org.hibernate</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>guava</artifactId>
                    <groupId>com.google.guava</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>slf4j-log4j12</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>spring-orm</artifactId>
                    <groupId>org.springframework</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>postgresql</artifactId>
                    <groupId>postgresql</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>spring-jdbc</artifactId>
                    <groupId>org.springframework</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>bonecp</artifactId>
                    <groupId>com.jolbox</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>zalando-dbutils</artifactId>
                    <groupId>de.zalando</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>reflections</artifactId>
                    <groupId>org.reflections</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>commons-beanutils</artifactId>
                    <groupId>commons-beanutils</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>slf4j-api</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>commons-lang</artifactId>
                    <groupId>commons-lang</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>validation-api</artifactId>
                    <groupId>javax.validation</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>persistence-api</artifactId>
                    <groupId>javax.persistence</groupId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <filters>
                        <filter>
                            <artifact>de.zalando:zalando-sprocwrapper</artifact>
                            <includes>
                                <include>de/zalando/sprocwrapper/**</include>
                                <include>de/zalando/typemapper/core/**</include>
                                <include>de/zalando/sprocwrapper/globalvaluetransformer/annotation/**</include>
                                <include>de/zalando/typemapper/core/ValueTansformer*.class</include>
                            </includes>
                            <excludes>
                                <exclude>de/zalando/sprocwrapper/Abstract*.class</exclude>
                                <exclude>de/zalando/sprocwrapper/SProc*.class</exclude>
                                <exclude>de/zalando/sprocwrapper/proxy/**</exclude>
                                <!-- <exclude>de/zalando/sprocwrapper/dsprovider/**</exclude> -->
                                <!--  -->
                                <exclude>de/zalando/sprocwrapper/globalvaluetransformer/G*.class</exclude>
                                <exclude>de/zalando/sprocwrapper/globalvaluetransformer/R*.class</exclude>
                                <exclude>de/zalando/sprocwrapper/globalvaluetransformer/V*.class</exclude>
                                <!--  -->
                                <exclude>de/zalando/typemapper/core/D*.class</exclude>
                                <exclude>de/zalando/typemapper/core/M*.class</exclude>
                                <exclude>de/zalando/typemapper/core/T*.class</exclude>
                                <exclude>de/zalando/typemapper/exception/**</exclude>
                                <exclude>de/zalando/typemapper/core/db/**</exclude>
                                <exclude>de/zalando/typemapper/core/fieldMapper/**</exclude>
                                <exclude>de/zalando/typemapper/core/result/**</exclude>
                                <exclude>de/zalando/typemapper/parser/**</exclude>
                                <exclude>com/typemapper/**</exclude>
                            </excludes>
                        </filter>
                        <filter>
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>META-INF/*.SF</exclude>
                                <exclude>META-INF/*.DSA</exclude>
                                <exclude>META-INF/*.RSA</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>