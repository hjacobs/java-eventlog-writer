<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.zalando</groupId>
    <artifactId>zomcat-jpa-documentation</artifactId>
    <version>1.4.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Zomcat-JPA Documetation</name>
    <description>Dokumentation for Zomcat-JPA</description>
    <organization>
        <name>Zalando/Technology/Application Strategy &amp; Architecture</name>
    </organization>
    <properties>
        <project.build_env.maven>maven3</project.build_env.maven>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctor-maven-plugin</artifactId>
                <version>0.1.3.1</version>
                <executions>
                    <execution>
                        <id>render-asciidoc</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>process-asciidoc</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <sourceDirectory>src/documentation</sourceDirectory>
                    <outputDirectory>target/documentation</outputDirectory>
                    <backend>html5</backend>
                    <doctype>article</doctype>
                    <headerFooter>true</headerFooter>
                    <sourceHighlighter>highlight.js</sourceHighlighter>
                    <imagesDir>target/documentation/images</imagesDir>
                    <attributes>
                        <stylesdir>./themes</stylesdir>
                        <stylesheet>golo.css</stylesheet>
                    </attributes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>de.zalando</groupId>
                                    <artifactId>asciidoctor-resources</artifactId>
                                    <version>0.1.0-jb</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/documentation</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
