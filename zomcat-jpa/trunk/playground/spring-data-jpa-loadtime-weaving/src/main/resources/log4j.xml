<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="default" class="org.apache.log4j.ConsoleAppender">
        <param name="encoding" value="UTF-8" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %x %p %t %l: %m%n" />
        </layout>
    </appender>
    <appender name="defaultFileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="${catalina.home}/logs/zalando-purchase-backend.log"/>
        <param name="MaxFileSize" value="5000KB"/>
        <!-- Keep one backup file -->
        <param name="MaxBackupIndex" value="4"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %x %p %t %l: %m%n"/>
        </layout>
    </appender>
    <logger name="org.springframework.web.context.ContextLoader">
        <level value="info"/>
    </logger>
    <logger name="de.zalando.data">
        <level value="debug" />
    </logger>
    <logger name="org.springframework">
        <level value="info" />
    </logger>
    <logger name="de.zalando.jpa.eclipselink">
        <level value="trace"/>
    </logger>
    <root>
        <priority value="debug" />
        <appender-ref ref="default" />
        <appender-ref ref="defaultFileAppender"/>
    </root>
</log4j:configuration>