<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
    xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="default">
        <class>de.zalando.data.jpa.domain.PurchaseOrderPosition</class>
        <class>de.zalando.data.jpa.domain.PurchaseOrder</class>
        <class>de.zalando.data.jpa.domain.InvoiceAddress</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <!-- <property name="javax.persistence.ddl-generation" value="create-tables"/>-->
            <property name="eclipselink.persistence-context.flush-mode" value="COMMIT" />
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.weaving" value="dynamic" />
            <property name="eclipselink.session.customizer" value="de.zalando.jpa.eclipselink.DefaultZomcatSessionCustomizer"/>
            <!-- custom SessionLog implementation to use apache commons logging 1.1 API (so log4J) -->
            <property name="eclipselink.logging.logger" value="de.zalando.jpa.eclipselink.Log4jSessionLog"/>
            <property name="eclipselink.logging.timestamp" value="false"/>
            <property name="eclipselink.logging.session" value="false"/>
            <property name="eclipselink.logging.connection" value="false"/>
            <property name="eclipselink.logging.thread" value="false"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>