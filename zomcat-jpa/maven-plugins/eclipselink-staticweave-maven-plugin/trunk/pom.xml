    <scm>
        <url>https://svn.zalando.net/reboot-libs/zomcat-jpa/maven-plugins/eclipselink-staticweave-maven-plugin/trunk</url>
        <connection>scm:svn:https://svn.zalando.net/reboot-libs/zomcat-jpa/maven-plugins/eclipselink-staticweave-maven-plugin/trunk</connection>
        <developerConnection>scm:svn:https://svn.zalando.net/reboot-libs/zomcat-jpa/maven-plugins/eclipselink-staticweave-maven-plugin/trunk</developerConnection>
    </scm>

